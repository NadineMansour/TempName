<% @l = "http://127.0.0.1:3000/posts/" + (@post.id).to_s %>
<%= social_share_button_tag("Share this post", :url => @l) %>
</br>

<% @temp_post = Post.find(@post.user_id) %>
	<% @att = @temp_post.post_attachments.all %>
	<% @att.each do |p| %>
	  <%= image_tag p.avatar_url %>
	<% end %>
	<br>
	<% @categories = @post.categories %>
	<% if @categories %>
	<p>Realted to: </p>
	<% end %>
	<% @categories.each do |category| %>
		<%= link_to category[:name] , category_path(category[:id]) %>
	<% end %>




<% @comment = Comment.new %>
		<%= form_for @comment , :url => comments_path(post_id: @post.id)  do |c| %>
			<%= c.label :body %>
			<%= c.text_field :body %>
				<br>
			<%= c.submit 'comment' %>
		<% end %>

<% @comments = @post.comments %>
	<% @comments.each do |comment|%>
	<% #@comment_user =  comment.user %>
	<% #= #@comment_user.name %>
		<%= comment.body %>
		<br>
		
		<% @replies = Reply.where(comment_id: comment.id) %>
		<% @replies.each do |reply| %>

		<% @reply_user =  User.find(reply.user_id) %>
	      <%= link_to @reply_user.email, user_path(@reply_user.id) %>

	          reply:
		      <%= reply.body %><br>
		      <% end %>

<% @reply = Reply.new %>
		<%= form_for @reply , :url => replys_path(comment_id: comment.id)  do |c| %>
			<%= c.label :reply %>
			<%= c.text_field :body %>
				<br>
			<%= c.submit 'reply' %>
		 <% end %>

