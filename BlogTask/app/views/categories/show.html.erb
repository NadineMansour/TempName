<div></div>
<div id="Cats">
<%= form_for @category do |c| %>
	<h5><strong>Category: <br>
	<%= @category.name %>
	</strong></h5>
	<br>
	<% @posts = @category.related_posts %>

	<div id="CategoriesPs">
	<% @posts.each do |post| %>
		<div id="PinC">
			<h3><strong><%= link_to post.title, post %></strong> </h3>
			<h6><em><%= post.created_at %></em></h6>
			<h4> <%= post.body%> </h4></br>
			<% @categories = post.categories %>
			<% if @categories and @categories.length > 0 %>
				<p><%= "Related to:" %></p>
				<% @categories.each do |category| %>
					<%= link_to category[:name] , category_path(category[:id]) %>
				<% end %>
			<% end %>
			</br>
			<% @att = post.post_attachments.all %>
			<% if @att and @att.length > 0%>
				<p><%= "Attachments" %></p>
				<% @att.each do |p| %>
					<div id="attach">
	  					<%= image_tag p.avatar_url %>
	  				</div>
	  			</br>
	  			<% end %>
			<% end %>
			</br>
		</div>
		<br>
		<br>
	<% end %>
	</div>
<% end %>
</div>