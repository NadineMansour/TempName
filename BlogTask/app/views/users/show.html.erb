<% if auth_user_profile?(1) %>
	<%= form_for @post, :url => posts_path, :remote=>true  do |p| %>
		<%= p.label :title %>
		<%= p.text_field :title %>
		<br>
		<%= p.label :body %>
		<%= p.text_area :body %>
		<br>
		<p>Related to : </p>
		<br>
		<%= collection_check_boxes(:post, :related_categories, Category.all, :id, :name) %> 
		<br>
		<%= p.submit "Create" %>
	<% end %>
<% end %>
