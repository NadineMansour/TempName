		<%= p.text_field :title %>
		<br>
		<%= p.label :body %>
		<%= p.text_area :body %>
		<br>
		<%= social_share_button_tag("My Site") %>
		<p>Related to : </p>
		<br>
		<%= collection_check_boxes(:post, :related_categories, Category.all, :id, :name) %> 
		<br>
		<%= p.submit "Create" %>
	<% end %>
<% end %>
